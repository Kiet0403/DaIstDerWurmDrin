<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane fx:id="difficultyPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.daistderwurmdrin.HelloController">
   <children>
      <Button fx:id="easyButton" layoutX="299.0" layoutY="212.0" mnemonicParsing="false" onAction="#newGame" prefHeight="25.0" prefWidth="103.0" text="Easy" />
      <Button fx:id="mediumButton" layoutX="299.0" layoutY="258.0" mnemonicParsing="false" onAction="#newGame" prefHeight="25.0" prefWidth="103.0" text="Medium" />
      <Button fx:id="hardButton" layoutX="299.0" layoutY="303.0" mnemonicParsing="false" onAction="#newGame" prefHeight="25.0" prefWidth="103.0" text="Hard" />
      <MenuBar layoutY="1.0" prefHeight="25.0" prefWidth="726.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" text="New game">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="N" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Save">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="S" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Load">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="L" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Music">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#Playmusic" text="Play" />
                  <MenuItem mnemonicParsing="false" onAction="#Stopmusic" text="Stop" />
                  <MenuItem mnemonicParsing="false" onAction="#prevSong" text="Previous Song" />
                  <MenuItem mnemonicParsing="false" onAction="#nextSong" text="Next Song" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
